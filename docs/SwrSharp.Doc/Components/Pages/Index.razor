@page "/"
@layout MainLayout

<div class="flex-1 flex flex-col justify-center items-center py-12 sm:py-20">
    <div class="text-center max-w-2xl mx-auto px-4 sm:px-6">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-4">SwrSharp</h1>
        <p class="text-lg sm:text-xl lg:text-2xl text-gray-400 mb-8">
            Powerful asynchronous state management, caching, and data synchronization for Blazor
        </p>

        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center mb-12">
            <a href="/docs/getting-started/overview" class="px-6 sm:px-8 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition font-medium text-sm sm:text-base">
                Get Started
            </a>
            <a href="https://github.com/chicuong/SwrSharp" target="_blank" class="px-6 sm:px-8 py-3 border border-[#30363d] text-gray-300 rounded-lg hover:border-gray-500 hover:text-white transition font-medium text-sm sm:text-base">
                View on GitHub
            </a>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 sm:gap-8 mt-12 sm:mt-16">
            <div class="p-4">
                <h3 class="text-lg font-semibold text-white mb-2">Fast</h3>
                <p class="text-gray-400 text-sm sm:text-base">Intelligent caching and background refetching keep your app responsive</p>
            </div>
            <div class="p-4">
                <h3 class="text-lg font-semibold text-white mb-2">Reliable</h3>
                <p class="text-gray-400 text-sm sm:text-base">Smart retry logic and network mode handling for robust data fetching</p>
            </div>
            <div class="p-4">
                <h3 class="text-lg font-semibold text-white mb-2">Developer-Friendly</h3>
                <p class="text-gray-400 text-sm sm:text-base">Type-safe API inspired by TanStack Query for React</p>
            </div>
        </div>
    </div>
</div>

