@page "/"
@layout LandingLayout

<!-- Hero -->
<div class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-red-500/5 to-transparent dark:from-red-500/10 dark:to-transparent"></div>
    <div class="relative max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 pt-16 sm:pt-24 pb-12 sm:pb-16 text-center">
        <img src="swrsharp-logo.jpg" alt="SwrSharp" class="w-28 h-28 sm:w-36 sm:h-36 mx-auto mb-6 rounded-2xl shadow-lg" />
        <h1 class="text-5xl sm:text-6xl lg:text-7xl font-extrabold tracking-tight">
            <span class="text-gray-900 dark:text-white">Swr</span><span class="bg-gradient-to-r from-red-500 to-yellow-500 bg-clip-text text-transparent">Sharp</span>
        </h1>
        <p class="mt-6 text-lg sm:text-xl lg:text-2xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto leading-relaxed">
            Powerful asynchronous state management, server-state utilities and data fetching for <strong class="text-gray-900 dark:text-white">.NET</strong>
        </p>
        <p class="mt-3 text-sm sm:text-base text-gray-500 dark:text-gray-500">
            Tinkered to work with Blazor, Avalonia, MAUI, and any .NET application
        </p>

        <!-- CTA -->
        <div class="mt-8 sm:mt-10 flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center">
            <a href="docs/GettingStarted/Overview"
               class="px-8 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition font-semibold text-sm sm:text-base shadow-lg shadow-red-600/20">
                Get Started
            </a>
            <a href="https://github.com/chicuong2k3/BlazorQuery" target="_blank"
               class="px-8 py-3 border border-gray-300 dark:border-[#404040] text-gray-700 dark:text-gray-300 rounded-lg hover:border-gray-400 dark:hover:border-gray-500 hover:text-gray-900 dark:hover:text-white transition font-semibold text-sm sm:text-base">
                View on GitHub
            </a>
        </div>

        <!-- Code snippet -->
        <div class="mt-12 sm:mt-16 max-w-2xl mx-auto text-left">
            <div class="bg-gray-50 dark:bg-[#171717] border border-gray-200 dark:border-[#404040] rounded-xl overflow-hidden shadow-xl">
                <div class="flex items-center gap-2 px-4 py-2.5 border-b border-gray-200 dark:border-[#404040]">
                    <div class="flex gap-1.5">
                        <div class="w-3 h-3 rounded-full bg-red-400"></div>
                        <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
                        <div class="w-3 h-3 rounded-full bg-green-400"></div>
                    </div>
                    <span class="ml-2 text-xs text-gray-400 dark:text-gray-500 font-mono">Program.cs</span>
                </div>
                <pre class="p-4 sm:p-5 overflow-x-auto text-[13px] leading-relaxed"><code class="text-gray-800 dark:text-gray-300 font-mono"><span class="text-purple-600 dark:text-purple-400">var</span> result = <span class="text-blue-600 dark:text-blue-400">UseQuery</span>(
    key: <span class="text-green-700 dark:text-green-400">"todos"</span>,
    fetcher: <span class="text-purple-600 dark:text-purple-400">async</span> () =>
    {
        <span class="text-purple-600 dark:text-purple-400">var</span> response = <span class="text-purple-600 dark:text-purple-400">await</span> httpClient.<span class="text-blue-600 dark:text-blue-400">GetAsync</span>(<span class="text-green-700 dark:text-green-400">"/api/todos"</span>);
        <span class="text-purple-600 dark:text-purple-400">return await</span> response.Content
            .<span class="text-blue-600 dark:text-blue-400">ReadFromJsonAsync</span>&lt;<span class="text-teal-600 dark:text-teal-400">List</span>&lt;<span class="text-teal-600 dark:text-teal-400">Todo</span>&gt;&gt;();
    }
);</code></pre>
            </div>
        </div>
    </div>
</div>

<!-- Features -->
<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24">
    <h2 class="text-center text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-4">
        Why SwrSharp?
    </h2>
    <p class="text-center text-gray-500 dark:text-gray-400 mb-12 sm:mb-16 max-w-2xl mx-auto">
        Make fetching, caching, synchronizing and updating server state in your .NET applications a breeze.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5 sm:gap-6">
        <!-- Declarative -->
        <div class="bg-gray-50 dark:bg-[#171717] border border-gray-200 dark:border-[#262626] rounded-xl p-6">
            <div class="w-10 h-10 rounded-lg bg-red-100 dark:bg-red-900/30 flex items-center justify-center mb-4">
                <svg class="w-5 h-5 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
            </div>
            <h3 class="text-base font-semibold text-gray-900 dark:text-white mb-2">Declarative & Automatic</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
                Automatic background refetching, request deduplication, and stale-while-revalidate out of the box.
            </p>
        </div>

        <!-- Multi-Platform -->
        <div class="bg-gray-50 dark:bg-[#171717] border border-gray-200 dark:border-[#262626] rounded-xl p-6">
            <div class="w-10 h-10 rounded-lg bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center mb-4">
                <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
            </div>
            <h3 class="text-base font-semibold text-gray-900 dark:text-white mb-2">Multi-Platform</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
                Works with Blazor, Avalonia, MAUI, and any .NET client. One library, every platform.
            </p>
        </div>

        <!-- Smart Caching -->
        <div class="bg-gray-50 dark:bg-[#171717] border border-gray-200 dark:border-[#262626] rounded-xl p-6">
            <div class="w-10 h-10 rounded-lg bg-green-100 dark:bg-green-900/30 flex items-center justify-center mb-4">
                <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                </svg>
            </div>
            <h3 class="text-base font-semibold text-gray-900 dark:text-white mb-2">Smart Caching</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
                Intelligent cache management with configurable stale times, garbage collection, and cache invalidation.
            </p>
        </div>

        <!-- Type-Safe -->
        <div class="bg-gray-50 dark:bg-[#171717] border border-gray-200 dark:border-[#262626] rounded-xl p-6">
            <div class="w-10 h-10 rounded-lg bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center mb-4">
                <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
            </div>
            <h3 class="text-base font-semibold text-gray-900 dark:text-white mb-2">Type-Safe</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
                Full C# type safety with generics throughout. Catch errors at compile time, not runtime.
            </p>
        </div>

        <!-- Network Resilient -->
        <div class="bg-gray-50 dark:bg-[#171717] border border-gray-200 dark:border-[#262626] rounded-xl p-6">
            <div class="w-10 h-10 rounded-lg bg-yellow-100 dark:bg-yellow-900/30 flex items-center justify-center mb-4">
                <svg class="w-5 h-5 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.14 0M1.394 9.393c5.857-5.858 15.355-5.858 21.213 0"/>
                </svg>
            </div>
            <h3 class="text-base font-semibold text-gray-900 dark:text-white mb-2">Network Resilient</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
                Automatic retries with exponential backoff, offline support, and configurable network modes.
            </p>
        </div>

        <!-- Lightweight -->
        <div class="bg-gray-50 dark:bg-[#171717] border border-gray-200 dark:border-[#262626] rounded-xl p-6">
            <div class="w-10 h-10 rounded-lg bg-teal-100 dark:bg-teal-900/30 flex items-center justify-center mb-4">
                <svg class="w-5 h-5 text-teal-600 dark:text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                </svg>
            </div>
            <h3 class="text-base font-semibold text-gray-900 dark:text-white mb-2">Lightweight</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
                Zero dependencies beyond .NET standard libraries. Small footprint, big impact.
            </p>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="border-t border-gray-200 dark:border-[#262626] py-8">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col sm:flex-row items-center justify-between gap-4">
        <p class="text-sm text-gray-500 dark:text-gray-500">SwrSharp - .NET Data Fetching & Caching</p>
        <div class="flex items-center gap-6">
            <a href="docs/GettingStarted/Overview" class="text-sm text-gray-500 hover:text-gray-700 dark:hover:text-gray-300 transition">Docs</a>
            <a href="https://github.com/chicuong2k3/BlazorQuery" target="_blank" class="text-sm text-gray-500 hover:text-gray-700 dark:hover:text-gray-300 transition">GitHub</a>
        </div>
    </div>
</footer>
