@inherits LayoutComponentBase

<div class="min-h-screen bg-white dark:bg-[#0d1117]">
    <!-- Header -->
    <header class="fixed top-0 left-0 right-0 z-40 border-b border-gray-200 dark:border-[#21262d] bg-white/80 dark:bg-[#010409]/80 backdrop-blur-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-14">
                <!-- Logo -->
                <a href="/" class="flex items-center gap-2 hover:opacity-80 transition">
                    <img src="/swrsharp-logo.jpg" alt="SwrSharp" class="w-8 h-8 rounded" />
                    <span class="text-base font-bold text-gray-900 dark:text-white">SWRSHARP</span>
                </a>

                <!-- Nav -->
                <nav class="flex items-center gap-4 sm:gap-6">
                    <a href="/docs/GettingStarted/overview"
                       class="text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition">
                        Docs
                    </a>
                    <a href="https://github.com/chicuong2k3/BlazorQuery" target="_blank"
                       class="text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition">
                        GitHub
                    </a>
                    <!-- Theme Toggle -->
                    <button onclick="toggleTheme()"
                            class="p-2 rounded-lg text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-[#161b22] transition"
                            aria-label="Toggle theme">
                        <svg class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
                        </svg>
                        <svg class="w-5 h-5 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
                        </svg>
                    </button>
                </nav>
            </div>
        </div>
    </header>

    <!-- Content -->
    <div class="pt-14">
        @Body
    </div>
</div>
